<div class="card">
    <div class="card-header">
	<%= link_to @app.name, application_path(@app.id) %>
    </div>
    <div class="card-block">
    <h4 class="card-title">Environments</h4>
    <div class="text-right mb-3">
      <%= link_to '+ New Environment', new_application_environment_path, class: "btn btn-primary" %>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @environments.each do |env| %>
        <tr scope="row">
          <td>
            <%= link_to env.name, application_environment_path(@app.id, env.id) %>
          </td>
          <td>
            <button type="button" class="btn btn-secondary btn-sm disabled" disabled="disabled">Copy</button>
            <button type="button" class="btn btn-secondary btn-sm disabled" disabled="disabled">Delete</button>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
