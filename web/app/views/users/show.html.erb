<div class="card">
  <div class="card-header" >
    User
  </div>
  <div class="card-block" >
    <h4 class="card-title"><%= @user.name %></h4>
    <h6 class="card-subtitle mb-2 text-muted">ID: <%= @user.id %></h6>
    <table class="table">
      <tbody>
        <tr>
          <th>Email</th>
          <td colspan="3"><%= @user.email %></td>
        </tr>
        <tr>
          <th>GitHub account</th>
          <td colspan="3">
            <% if @user.github_oauth_access_token.present? %>
              Linked to GitHub
            <% else %>
              <a href='/auth/github' class='btn btn-primary'>
                Link to GitHub
              </a>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
